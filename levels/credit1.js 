var Credit = {};

(function(my, $){
	"use strict";
	var contentDiv = $('<div class = "page" id = "page23"></div>');
	my.slideDesc = function(){
		var body = $('clipOrder');
		var header = $("<h2>Electra's Candy Factory</h2>");
		body.html(header);
		var myHeader = $('h2');
		myHeader.css('text-align', 'center');
		myHeader.css('font-size', '3.5em');
		myHeader.css('margin', '0px');
		myHeader.css('background-color', '#FFEBCD');
		myHeader.css('padding', '0.3em 0 0.3em 0');
		body.append(contentDiv); //for the moment
		contentDiv.css('text-align', 'center');
		var odysseyDesc = $('<h2><div>Odyssey Project Completed May 2012 at Hendrix College</div>'
						+ '<div><img src = "hendrix.png"></img></div>');
						
		var circuitDiv = $('<div><table><tbody><tr><th>Circuit Editor</th></tr>'
							+ '<tr><td>Dr. Carl Burch</td></tr></tbody></table>');
							
		var clipboardDiv = $('<div><table><tbody><tr><th>Clipboard</th></tr>'
							+ '<tr><td>Concorde Habineza</td><tr><td>Jeannette Inema</td></tr><tr><td>Brandon McNew</td></tr></tbody></table></div>');
							
		var factoryDiv = $('<div><table><tbody><tr><th>Factory Floor</th></tr>'
							+ '<tr><td>Thierry Kimenyi</td></tr><tr><td>Justin John</td></tr><tr><td>Sung Oh</td></tr></tbody></table></div>');
							
		var graphicDiv = $('<div><table><tbody><tr><th>Graphic Design</th></tr>'
							+ '<tr><td>Megan Childress</td</tr></tbody></table</div>');
							
		var tutorialDiv = $('<div><table><tbody><tr><th>Tutorial/Credit</th></tr>'
							+ '<tr><td>Jeffrey Biles</td></tr><tr><td>Safari Sibomana</td></tr><tr><td>Pierre Urisanga</td></tr></tbody></table></div>');
		var myElts = [odysseyDesc, circuitDiv, clipboardDiv, factoryDiv, graphicDiv, tutorialDiv];
    	contentDiv.html(myElts[0]);
    	slideDivs(myElts, 0);

		contentDiv.css('overflow', 'hidden');
		contentDiv.css('width', '80%');
		contentDiv.css('margin', '10%');
		contentDiv.css('margin-top', '2.0em');
		contentDiv.css('background-color', '#BDB76B');
		contentDiv.css('padding', '4% 0 0.8em 0');
		body.css('overflow', 'hidden');
		body.css('color',  '#A30000');
		body.css('margin', '0px');
		}
	function slideDivs(divs, i){
		divs[i].css('width', '80%');
		divs[i].css('margin', '10%');
		divs[i].css('font-size', '2.0em');
		$('table th').css('padding-top', '1.5em');
		$('table td').css('font-size', '0.5em');
		$('table').css('margin-left', '30%');
		$('table').css('width', '40%');
		divs[i].css('margin-top', '0px');
		divs[i].delay(5000).animate({
			
		marginLeft: divs[i].outerWidth()
    		}, 2000, function(){
    			divs[i].remove();
    			if(i < divs.length -1){
    				contentDiv.append(divs[i + 1]);
    				slideDivs(divs, i+1);
    			}else{
    				contentDiv.html(divs[0]);
    				slideDivs(divs, 0);
    			}
    		});
		}

}(Credit, jQuery));
